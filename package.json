{
  "name": "withexeditor",
  "description": "View Source, View Selection, and Edit Text with the external editor.",
  "author": "asamuzaK",
  "homepage": "https://github.com/asamuzaK/withExEditor",
  "bugs": {
    "url": "https://github.com/asamuzaK/withExEditor/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asamuzaK/withExEditor.git"
  },
  "license": "MPL-2.0",
  "type": "module",
  "scripts": {
    "bundle": "npm-run-all -s bundle:*",
    "bundle:copy": "copyfiles --up=1 src/LICENSE src/manifest.json src/_locales/**/*.json src/css/*.css src/html/*.html src/img/*.* src/lib/*.* src/mjs/*.js bundle",
    "bundle:esbuild": "esbuild src/mjs/content-loader.js --bundle --minify --outfile=bundle/js/content.js",
    "lint": "npm-run-all -s lint:*",
    "lint:addons-linter": "addons-linter src",
    "lint:eslint": "eslint --fix .",
    "test": "npm run test:central",
    "test:beta": "c8 --reporter=text mocha test/*.test.js --require test/mocha/setup.js --channel=beta --exit",
    "test:central": "c8 --reporter=text mocha test/*.test.js --require test/mocha/setup.js --channel=central --exit",
    "test:esr": "c8 --reporter=text mocha test/*.test.js --require test/mocha/setup.js --channel=esr --exit",
    "test:release": "c8 --reporter=text mocha test/*.test.js --require test/mocha/setup.js --channel=release --exit",
    "test_all": "npm-run-all -s test:*"
  },
  "devDependencies": {
    "addons-linter": "^3.19.0",
    "c8": "^7.10.0",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.13.4",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsdoc": "^36.1.0",
    "eslint-plugin-no-unsanitized": "^3.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jsdom": "^18.0.0",
    "mocha": "^9.1.2",
    "npm-run-all": "^4.1.5",
    "sinon": "^11.1.2",
    "webext-schema": "^2.0.0",
    "webextension-polyfill": "^0.8.0"
  },
  "version": "8.0.0"
}
