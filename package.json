{
  "name": "withexeditor",
  "description": "View Source, View Selection, and Edit Text with the external editor.",
  "author": "asamuzaK",
  "homepage": "https://github.com/asamuzaK/withExEditor",
  "bugs": {
    "url": "https://github.com/asamuzaK/withExEditor/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asamuzaK/withExEditor.git"
  },
  "license": "MPL-2.0",
  "type": "module",
  "scripts": {
    "bundle": "npm-run-all -s bundle-*",
    "bundle-compat": "node index compat -ci",
    "bundle-copy": "copyfiles --up=1 --verbose src/LICENSE src/_locales/**/*.json src/css/*.css src/html/*.html src/img/*.* src/lib/**/* src/mjs/*.js --exclude=src/mjs/background.js --exclude=src/mjs/options.js bundle",
    "bundle-esbuild": "esbuild --outfile=bundle/js/content.js --bundle --minify --sourcemap src/mjs/content-loader.js",
    "include": "npm-run-all -s include-*",
    "include-browser": "copyfiles --up=3 --verbose node_modules/webext-schema/modules/browser.js src/mjs",
    "include-url": "copyfiles -f --verbose node_modules/url-sanitizer/LICENSE node_modules/url-sanitizer/dist/url-sanitizer.min.js node_modules/url-sanitizer/dist/url-sanitizer.min.js.map src/lib/url && node index include --dir=url -i",
    "include-polyfill": "copyfiles -f --verbose node_modules/webextension-polyfill/LICENSE node_modules/webextension-polyfill/dist/browser-polyfill.min.js node_modules/webextension-polyfill/dist/browser-polyfill.min.js.map src/lib/mozilla && node index include --dir=mozilla -i",
    "lint": "npm-run-all -s lint-*",
    "lint-addons-linter": "addons-linter src",
    "lint-eslint": "eslint --fix .",
    "lint-html": "html-validate src/html/*.html",
    "lint-style": "stylelint --fix src/css/*.css",
    "test": "npm run test-central",
    "test-beta": "c8 mocha --require=test/mocha/setup.js --channel=beta --exit test/*.test.js",
    "test-central": "c8 mocha --require=test/mocha/setup.js --channel=central --exit test/*.test.js",
    "test-esr": "c8 mocha --require=test/mocha/setup.js --channel=esr --exit test/*.test.js",
    "test-release": "c8 mocha --require=test/mocha/setup.js --channel=release --exit test/*.test.js",
    "test_all": "npm-run-all -s test-*"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "url-sanitizer": "^0.2.2",
    "webext-schema": "^5.1.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "addons-linter": "^5.26.0",
    "c8": "^7.12.0",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.17.2",
    "eslint": "^8.32.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^45.0.2",
    "html-validate": "^7.13.1",
    "jsdom": "^21.0.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^15.0.1",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "undici": "^5.15.0"
  },
  "version": "10.5.0"
}
